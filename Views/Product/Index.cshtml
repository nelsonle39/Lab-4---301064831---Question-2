@model IEnumerable<Lab3_301064831.Models.Product>

<h1>Products</h1>

<form method="get" asp-action="Index">
    <input type="text" name="searchQuery" value="@ViewData["SearchQuery"]" placeholder="Search products" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Product</a>
